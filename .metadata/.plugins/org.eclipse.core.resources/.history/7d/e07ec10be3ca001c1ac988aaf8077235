package com.asynchonysed.threads;

public class ThreadEx {

	int balance;
	
	public static void main(String[] args) {
		ThreadEx te = new ThreadEx();
		te.amount();
		System.out.println(te.balance);
		
	}
	public void amount() {
		Thread t1 = new Thread(new Runnable() {
			
			@Override
			public void run() {
				add();// this.add();
				
			}
		});
		
		Thread t2 = new Thread(new Runnable() {
			
			@Override
			public void run() {
				sub(); // this.sub
				
			}
		});
		
	}
	
	public void add() {
		for(int i=0;i<=10000;i++) {
			balance = balance+i;
		}
	}
	
	public void sub() {
		for(int i=0;i<=10000;i++) {
			balance = balance-i;
		}
	}
	
	
	

}
